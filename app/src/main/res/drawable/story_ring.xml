<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Gradient Stroke -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/yellow"
                android:centerColor="@color/orange"
                android:endColor="@color/dark_orange"
                android:type="linear" />
        </shape>
    </item>

    <!-- Inner Circle (Background or Transparent Fill) -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Background color -->
        </shape>
    </item>

</layer-list>
